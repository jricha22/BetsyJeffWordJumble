<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="14dp"
                />
            <gradient
                android:angle="270"
                android:centerX="35%"
                android:centerColor="#0C78C0"
                android:startColor="#074986"
                android:endColor="#18A7E3"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <stroke
                android:width="1dp"
                android:color="#1280A8"
                />
        </shape>
    </item>
</selector>