<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.GameScreenActivity"
    tools:showIn="@layout/activity_game_screen">

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvTitle"

        android:text="Five Letter Challenge"
        android:textColor="#145E82"
        android:textSize="30sp"
        android:textStyle="bold"
        android:shadowColor="#ffffff"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="20"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:textAlignment="center"
        android:padding="10dp" />

    <LinearLayout
        android:id="@+id/llLetters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp">
        <TextView
            android:id="@+id/tvFirstLetter"

            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/colored_box"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"

            android:gravity="center_vertical"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvSecondLetter"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/colored_box"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tvThirdLetter"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/colored_box"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:gravity="center_vertical"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvFourthLetter"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/colored_box"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:gravity="center_vertical"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvFifthLetter"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/colored_box"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:gravity="center_vertical"
            android:textAlignment="center" />


    </LinearLayout>

    <EditText
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:id="@+id/etAnswer"
        android:hint=""

        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:drawable/editbox_background_normal" />

    <Button
        android:layout_width="113dp"
        android:layout_height="33dp"

        android:text="Submit"
        android:textSize="16dp"
        android:textColor="#FFFFFF"

        android:id="@+id/btnSubmit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="showResult"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/blue_button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvHint"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:layout_width="113dp"
        android:layout_height="33dp"

        android:text="Hint"
        android:textSize="16dp"
        android:textColor="#FFFFFF"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"


        android:background="@drawable/hint_button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"

        android:id="@+id/btnHint"
        android:onClick="showHint"/>
</LinearLayout>
